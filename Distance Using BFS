void bfs(int v) {
    queue<int> q;
    q.push(v);
    vis[v] = 1;
    dist[v] = 0;
    
    while(!q.empty())   {
        int curr=q.front();
        q.pop();
        
        for(int child : arr[curr])  {
            if(vis[child] == 0) {
                q.push(child);
                dist[child] = dist[curr] + 1;
                vis[child] = 1;
            }
        }
    }
    
}
